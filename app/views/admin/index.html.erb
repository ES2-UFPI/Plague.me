<h1>Admin Config</h1>
<h2>Jogos</h2>

<%= link_to 'Criar novo jogo', new_game_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Classificação</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name_game %></td>
        <td><%= game.description_game %></td>
        <td><%= game.rate_game %></td>
        <td>
          <%= link_to 'Visualizar', game, class: 'btn btn-secondary mr-2' %>
          <%= link_to 'Editar', edit_game_path(game), class: 'btn btn-info mr-2' %>
          <%= link_to 'Excluir', game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

